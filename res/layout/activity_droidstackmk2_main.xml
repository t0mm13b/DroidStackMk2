<android.support.v4.widget.DrawerLayout
	xmlns:android="http://schemas.android.com/apk/res/android" android:id="@+id/drawer_layout"
	android:layout_width="match_parent" android:layout_height="match_parent"
	xmlns:tools="http://schemas.android.com/tools">
	<FrameLayout android:id="@+id/content_frame"
		android:layout_width="match_parent" android:layout_height="match_parent" />
	<FrameLayout android:id="@+id/drawer" android:layout_width="240dp"
		android:layout_height="match_parent" android:layout_gravity="start">
		<fragment android:id="@+id/drawerFragment" android:name="ie.t0mm13b.droidstackmk2.drawer.DrawerFragment"
		android:layout_width="240dp" android:layout_height="match_parent"
		tools:android_layout="@layout/drawer_fragment"/>
	</FrameLayout>
</android.support.v4.widget.DrawerLayout>